#!/bin/bash

path=/vagrant-mnt/ops/scripts/provision/ubuntu

jenkins_password=$1

$path/swap 2048
$path/base ops.bill-boyer.com live

$path/ruby
$path/jenkins $jenkins_password
$path/aws
$path/vagrant
$path/node
$path/grunt
$path/compass
$path/xvfb
$path/selenium-python

$path/aws-user root root /root
$path/aws-user jenkins jenkins ~jenkins

sudo -u jenkins $path/jenkins-user /vagrant/jobs
